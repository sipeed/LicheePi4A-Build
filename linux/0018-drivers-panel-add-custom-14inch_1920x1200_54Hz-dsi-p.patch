From bef44cb7a058eb5efefc2b5242b8a4da91b967c1 Mon Sep 17 00:00:00 2001
From: Lu Hui <luhui@sipeed.com>
Date: Wed, 8 Nov 2023 11:06:58 +0800
Subject: [PATCH 18/53] drivers: panel: add custom 14inch_1920x1200_54Hz dsi
 panel

---
 drivers/gpu/drm/panel/panel-simple.c | 32 ++++++++++++++++++++++++++++
 1 file changed, 32 insertions(+)

diff --git a/drivers/gpu/drm/panel/panel-simple.c b/drivers/gpu/drm/panel/panel-simple.c
index 8e5e90633..f9986a549 100644
--- a/drivers/gpu/drm/panel/panel-simple.c
+++ b/drivers/gpu/drm/panel/panel-simple.c
@@ -4712,6 +4712,35 @@ static const struct panel_desc_dsi hlt_hpk070h275 = {
 	.lanes	= 4,
 };
 
+static const struct drm_display_mode z14inch_1920x1200_54Hz_mode = {
+        .clock = 138250,
+        .hdisplay = 1920,
+        .hsync_start = 1920 + 48,
+        .hsync_end = 1920 + 48 + 32,
+        .htotal = 1920 + 48 + 32 + 80,
+        .vdisplay = 1200,
+        .vsync_start = 1200 + 3,
+        .vsync_end = 1200 + 3 + 6,
+        .vtotal = 1200 + 3 + 6 + 22,
+	.flags = DRM_MODE_FLAG_NHSYNC | DRM_MODE_FLAG_NVSYNC,
+};
+
+static const struct panel_desc_dsi z14inch_1920x1200_54Hz = {
+	.desc = {
+		.modes = &z14inch_1920x1200_54Hz_mode,
+		.num_modes = 1,
+		.bpc = 8,
+		.size = {
+			.width = 62,
+			.height = 110,
+		},
+		.connector_type = DRM_MODE_CONNECTOR_DSI,
+	},
+	.flags = MIPI_DSI_MODE_VIDEO | MIPI_DSI_MODE_LPM | MIPI_DSI_MODE_VIDEO_BURST,
+	.format = MIPI_DSI_FMT_RGB888,
+	.lanes = 4,
+};
+
 static const struct of_device_id dsi_of_match[] = {
 	{
 		.compatible = "auo,b080uan01",
@@ -4737,6 +4766,9 @@ static const struct of_device_id dsi_of_match[] = {
 	}, {
 		.compatible = "hlt,hpk070h275",
 		.data = &hlt_hpk070h275
+	}, {
+		.compatible = "custom,z14inch_1920x1200_54Hz",
+		.data = &z14inch_1920x1200_54Hz
 	}, {
 		/* sentinel */
 	}
