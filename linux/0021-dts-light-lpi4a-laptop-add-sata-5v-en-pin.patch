From: Lu Hui <luhui@sipeed.com>
Date: Wed, 8 Nov 2023 17:10:26 +0800
Subject: [PATCH 21/53] dts: light-lpi4a-laptop: add sata 5v en pin

---
 arch/riscv/boot/dts/thead/light-lpi4a-laptop.dts | 12 ++++++++++++
 1 file changed, 12 insertions(+)

diff --git a/arch/riscv/boot/dts/thead/light-lpi4a-laptop.dts b/arch/riscv/boot/dts/thead/light-lpi4a-laptop.dts
index d2c4b62b6..89956b023 100644
--- a/arch/riscv/boot/dts/thead/light-lpi4a-laptop.dts
+++ b/arch/riscv/boot/dts/thead/light-lpi4a-laptop.dts
@@ -58,6 +58,18 @@ reg_usb_vcc_5v: regulator-usb-vcc-5v-en {
 		regulator-always-on;
         };
 
+	reg_sata_vcc_5v: regulator-sata-vcc-5v-en {
+		status = "okay";
+		compatible = "regulator-fixed";
+		regulator-name = "regulator-sata-vcc-5v-en";
+		regulator-min-microvolt = <5000000>;
+		regulator-max-microvolt = <5000000>;
+		vin-supply = <&reg_usb_vcc_5v>;
+		gpio = <&pcal6408ahk_c 1 1>;
+		enable-active-high;
+		regulator-always-on;
+	};
+
 	audio_amp: regulator-audio-amp-en {
                 status = "okay";
                 compatible = "regulator-fixed";
